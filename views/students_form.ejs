<%- include('partials/header', {title: title + ' Student Data'}) %>
  
  <div class="container">
    <h1><%= title %> Student Data</h1>
    <a href="/" type="button" class="btn btn-secondary">Back to home</a>
    <a href="/students" type="button" class="btn btn-primary">Show Students Data</a><br><br>

    <% if (err) { %>
    <div class="alert alert-danger" role="alert">
      Warning!<br>
      <%= err %>
    </div>
    <% } %>

    <form method="POST">
      <div class="form-group">
        <label for="first_name">First Name</label>
        <input type="text" class="form-control" name="first_name" value="<%= edit.first_name %>">
      </div>
      <div class="form-group">
        <label for="last_name">Last Name</label>
        <input type="text" class="form-control" name="last_name" value="<%= edit.last_name %>">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" name="email" value="<%= edit.email %>">
      </div>
      <div class="form-group">
        <label for="birth_date">Birth Date</label>
        <% if (typeof edit.birth_date == 'object') { %>
        <% const bd = new Date(edit.birth_date) %>
        <input type="text" class="form-control" name="birth_date" value="<%= bd.getDay() %>/<%= bd.getMonth()+1 %>/<%= bd.getFullYear() %>" placeholder="DD/MM/YYYY">
        <% } else { %>
          <input type="text" class="form-control" name="birth_date" value="<%= edit.birth_date %>" placeholder="DD/MM/YYYY">
        <% } %>
        <small id="emailHelp" class="form-text text-muted">Input with format: DD/MM/YYYY (tanggal/bulan/tahun)</small>
      </div>
      <button type="submit" class="btn btn-primary"><%= title %> Student Data</button>
    </form>
  </div>
<%- include('partials/footer') %>