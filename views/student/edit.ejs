<%- include('../partials/header') %>
<div class="container">
  <h3>Edit Student Data</h3>
  <div class="row">
    <form class="col s12" action="/students/<%= data.id %>/edit" method="post">
      <div class="row">
        <div class="input-field col s12">
          <input id="first_name" name="first_name" type="text" class="validate" value="<%= data.first_name %>"
            autofocus>
          <label for="first_name">First Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="last_name" name="last_name" type="text" class="validate" value="<%= data.last_name %>">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <p style="color: #9e9e9e;">Gender</p>
      <p>
        <label>
          <% if (data.gender === 'male') { %>
          <input name="gender" value="male" type="radio" class="with-gap" checked />
          <% } else { %>
          <input name="gender" value="male" type="radio" class="with-gap" />
          <% } %>
          <span>Male</span>
        </label>
      </p>
      <p>
        <label>
          <% if (data.gender === 'female') { %>
          <input name="gender" value="female" type="radio" class="with-gap" checked />
          <% } else { %>
          <input name="gender" value="female" type="radio" class="with-gap" />
          <% } %>
          <span>Female</span>
        </label>
      </p>
      <p>
        <div class="row">
          <div class="input-field col s12">
            <input id="email" name="email" type="email" class="validate" value="<%= data.email %>">
            <label for="email">Email</label>
          </div>
        </div>
        <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right">edit</i>Edit
          Student</button>
        <a href="/students" class="waves-effect waves-light btn right">Show All Students</a>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>