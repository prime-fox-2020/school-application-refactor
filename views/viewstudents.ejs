<%- include('partials/head.ejs') %>
    <body>

        <div class='header'>
            <h1>Students' Detailed Information</h1>
        </div>

        <table class='studentstable'>
            <tr>
                <th>id</th>
                <th>firstname</th>
                <th>lastname</th>
                <th>email</th>
            </tr>
            <% students.forEach(i => { %>
                <tr>
                    <td><%= i.id  %></td>
                    <td><%= i.first_name  %></td>
                    <td><%= i.last_name  %></td>
                    <td><%= i.email  %></td>
                    <td>
                      <a href="/students/edit/<%= i.id %>">Edit</a>
                       | 
                      <a href="/students/delete/<%= i.id %>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </table>
        <br>
        <a href="/students/add">Add Student</a>
        
    </body>
</html>