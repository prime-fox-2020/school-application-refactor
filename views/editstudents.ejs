<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf8">
    <title>Edit Student Information</title>
  </head>

  <body>
    
    <h1>Edit Student Information</h1>

    <form action="/students/edit/<%= studentData.id %>" method="POST">
      <label for="first_name">First Name</label><br>
      <input type="text" id="first_name" name="first_name" placeholder="<%= studentData.first_name %>" minlength="4" autofocus required>
      <br><br>
      <label for="last_name">Last Name</label><br>
      <input type="text" id="last_name" name="last_name" placeholder="<%= studentData.last_name %>" minlength="4" required>
      <br><br>
      <label for="email">Email Address</label><br>
      <input type="text" id="email" name="email" placeholder="<%= studentData.email %>" required>
      <br><br>
      <label for="gender">Male/Female</label><br>
      <input type="text" id="gender" name="gender" placeholder="<%= studentData.gender %>" required>
      <br><br>
      <button type="submit">Submit</button>
    </form>

  </body>

</html>