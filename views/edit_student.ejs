<%- include('./partials/header', {title: "Edit Student Data"}); %>

    <div class="container text-center">
        <% if (msg) { %>
            <p> <%= msg %> </p>
        <% } %>   
    
        <form action="" method="POST">
            <input type="text" name="first_name" value="<%= student.first_name %>" autofocus><br><br>
            <input type="text" name="last_name" value="<%= student.last_name %>"><br><br>
            <input type="email" id="email" name="email" value="<%= student.email %>"><br><br>
            <p>Select your gender:</p>
            <input type="radio" id="male" name="gender" value = "male" <%= student.gender== 'male' ? 'checked' : ''%> >
            <label for="male">Male</label><br>
            <input type="radio" id="female" name="gender" value = "female" <%= student.gender== 'female' ? 'checked' : ''%>>
            <label for="female">Female</label><br><br>
            <label for="birth_date">Birth date</label><br>
            <!-- <input type="text" name="birth_date" value="<%= student.birth_date %>"><br><br><br> -->
            <input type="date" id="birth_date" value="<%= student.birth_date %>" name="birth_date"><br><br><br>
            <button type="submit">Submit</button>
        </form>
    </div>

<%- include('./partials/footer'); %>