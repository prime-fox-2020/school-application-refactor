<!doctype html>
<html lang="en">

<%- include('./partials/head.ejs')  %>

<body>
    <%- include('./partials/navbar.ejs')  %>

    <div class="jumbotron jumbotron-fluid mt-8">
        <div class="container mt-8">
            <div class="mb-4">
                <a href="/students/add" class="float-right">
                    <button class="btn btn-primary">Add Student</button>
                </a>
                <h1>List students</h1>
            </div>

            <% if (msg) { %>
            <div class="alert alert-primary" role="alert">
                <%= msg %>
            </div>
            <% } %>

            <div class="card p-4 bg-dark">
                <table class="table p-4">
                    <thead class="thead-dark ml-4">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Birth Date</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <% if (students) { %>
                    <tbody class="alert-warning" id="table-data">
                        <div data-spy="scroll" data-target="#table-data" data-offset="0" class="scrollspy-example">
                            <% students.forEach(el => { %>
                            <tr>
                                <th scope="row"><%= el.id %></th>
                                <td><%= el.first_name %></td>
                                <td><%= el.last_name %></td>
                                <td><%= el.email %></td>
                                <td><%= el.gender %></td>
                                <td><%= el.birth_date.toISOString().slice(0,10) %></td>
                                <td>
                                    <a href="/students/<%= el.id %>/edit"><button
                                            class="btn btn-outline-secondary">Edit</button></a>
                                    <a href="/students/<%= el.id %>/delete"><button
                                            class="btn btn-danger">Delete</button></a>
                                </td>
                            </tr>
                            <% }) %>
                        </div>
                    </tbody>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

    <%- include('./partials/script.ejs')  %>

</body>

</html>